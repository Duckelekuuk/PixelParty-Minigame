Titles.sendActionBar(event.getPlayer(), "&cActionBar &a" + event.getPlayer().getDisplayName());

TabBar.sendTab(event.getPlayer(), "&eHEAD", "&cFOOTER");

new JsonMessage("&cSUPER COOLE MESSAGE")
        .addToolTip("1e &bHover", "2e &3Hover")
        .addSuggestion("Ik suggest")
        .then(" &6Hoe spijtig")
        .addCommand("/say ook mooi")
        .send(event.getPlayer());

